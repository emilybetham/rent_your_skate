<div class="banner" style="background: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path "skate-park.jpg" %>')">
  <div class="banner-content">
    <h1>RENT YOUR <span id="banner-typed-text"></span></h1>
    <p>Unique sport experiences</p>
    <h4>find equipment near you...</h4>
  </div>
  <div class="address-form">
  <%= form_tag "#cards_ancre", method: :get, class: "form-home" do %>
    <%= text_field_tag :address,
    nil,
    id: "address-id",
    class: "form-control custom-margin custom-font-size",
    placeholder: "Enter your address" %>
    <%= submit_tag 'Go!', id: "submit" %>
  <% end %>
  </div>
</div>

<div class="main-container">
    <div id= "cards_ancre" class="cards-container wrapper-grey padde ">
      <h2 class="text-center"></h2>
      <div class="row">
        <% @products.each do |product| %>
          <div class="col-xs-12 col-md-4 col-sm-6">
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
             url('<%= cl_image_path product.photo, height: 300, width: 400, crop: :fill %>')">
              <div class="card-category"><%= product.category %></div>
              <div class="card-description">
                <h2><%= product.name %></h2>
                <p><%= product.description %></p>
              </div>
              <%= link_to '', product_path(product), class: "card-link" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <div
    id="map"
    style="width: 100%;
    height: 720px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>
</div>
