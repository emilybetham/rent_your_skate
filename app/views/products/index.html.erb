<div class="banner" style="background: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path "skate-park.jpg" %>')">
  <div class="banner-content">
    <h1>RENT YOUR SKATE</h1>
    <p>Unique sport experiences</p>
    <%= link_to 'Find a skate', products_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>

<div class="wrapper-grey padded">
  <div class="container">
    <h2 class="text-center"></h2>
    <div class="row">
      <% @products.each do |product| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url('<%= cl_image_path product.photo, height: 300, width: 400, crop: :fill %>')">
          <div class="card-category"><%= product.category %></div>
          <div class="card-description">
            <h2><%= product.name %></h2>
            <p><%= product.description %></p>
          </div>
          <%= link_to '', product_path(product), class: "card-link" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

