  <div class="wrapper-white">
    <div class="container">
      <h2 class="text-center">Choose an other products:</h2>
      <div class="row">
        <% @products.each do |product| %>
          <div class="col-xs-12 col-md-4 col-sm-3">
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
             url('<%= cl_image_path product.photo, height: 300, width: 400, crop: :fill %>')">
              <div class="card-category"><%= product.category %></div>
              <div class="card-description">
                <h2><%= product.name %></h2>
                <p><%= product.description %></p>
              </div>
              <%= link_to '', product_path(product), class: "card-link" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
