<div class="container">
  <ul class="smooth-scroll">
    <h2>My bookings</h2>
    <% @bookings.each do |booking| %>
    <li class="message">
      <%= cl_image_tag booking.product.photo, height: 150, width: 200, crop: :fill, class: "avatar-large" %>
        <div class="message-name">
          <h3><%= booking.user.name %></h3>
          <p><%= booking.user.email %></p>
        </div>
        <div class="message-body">
          <p><strong><%= booking.product.name %></strong></p>
          <p><%= "Booking request for your #{booking.product.category} on #{booking.date}" %></p>
        </div>
        <div class="message-status">
          <p class="status pending">Pending</p>
          <p class="price">€<%= booking.product.price %></p>
        </div>
      </li>
    <% end %>
  </ul>
  <ul class="smooth-scroll">
    <h2>My products booked</h2>
    <% @my_bookings.each do |booking| %>
    <li class="message">
      <%= cl_image_tag booking.product.photo, height: 150, width: 200, crop: :fill, class: "avatar-large" %>
        <div class="message-name">
          <h3><%= booking.user.name %></h3>
          <p><%= booking.user.email %></p>
        </div>
        <div class="message-body">
          <p><strong><%= booking.product.name %></strong></p>
          <p><%= "Booking request for your #{booking.product.category} on #{booking.date}" %></p>
        </div>
        <div class="message-status">
          <p class="status pending">Pending</p>
          <p class="price">€<%= booking.product.price %></p>
        </div>
      </li>
    <% end %>
  </ul>
</div>


<div>
  <h2>My products</h2>
  <% @products.each do |product| %>
  <%= product.name %>
  <% end %>
</div>

